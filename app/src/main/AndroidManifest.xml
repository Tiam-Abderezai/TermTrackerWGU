<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.term_tracker_wgu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ViewModel.AddTermActivity"
            android:parentActivityName=".TermsActivity" />
        <activity
            android:name=".ViewModel.AddCourseActivity"
            android:parentActivityName=".CoursesActivity" />
        <activity
            android:name=".ViewModel.AddAssessmentActivity"
            android:parentActivityName=".AssessmentsActivity" />


        <activity
            android:name=".ViewModel.EditTermActivity"
            android:parentActivityName=".TermsActivity" />
        <activity
            android:name=".ViewModel.EditCourseActivity"
            android:parentActivityName=".CoursesActivity" />
        <activity
            android:name=".ViewModel.EditAssessmentActivity"
            android:parentActivityName=".AssessmentsActivity" />
        <activity
            android:name=".ViewModel.DetailTermActivity"
            android:parentActivityName=".TermsActivity" />
        <activity
            android:name=".ViewModel.DetailCourseActivity"
            android:parentActivityName=".CoursesActivity" />
        <activity
            android:name=".ViewModel.DetailAssessmentActivity"
            android:parentActivityName=".AssessmentsActivity" />

        <activity
            android:name=".AssessmentsActivity"
            android:label="@string/title_activity_assessments"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".CoursesActivity"
            android:label="@string/title_activity_courses"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewModel.NotesActivity"
            android:label="@string/title_activity_notes"
            android:launchMode="singleTop"
 />

        <activity android:name=".TermsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Notifications.AlertReceiver" />
    </application>

</manifest>
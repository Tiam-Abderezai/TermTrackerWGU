<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ViewModel.AddAssessmentActivity">

    <EditText
        android:id="@+id/add_text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assessment Type"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/add_text_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due Date"
        android:inputType="text"
        />

    <Button
        android:id="@+id/buttonDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Due Date" />

    <EditText
        android:id="@+id/add_text_status_assessment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status"
        android:inputType="text"
        />

</LinearLayout>
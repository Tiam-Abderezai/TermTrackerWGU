<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ViewModel.DetailTermActivity">

    <TextView
        android:id="@+id/detail_text_id_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Term Title"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/detail_text_title_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Term Title"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/detail_text_date_start_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/detail_text_date_end_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/detail_text_status_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Status"
        android:inputType="text"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_courses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/course_items" />



</LinearLayout>